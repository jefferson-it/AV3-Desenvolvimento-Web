{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true
    },
    "include": [
        "**/*.js",
        "**/*.d.ts",
        "@types/**.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}